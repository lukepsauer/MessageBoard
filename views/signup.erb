<h1 class="text-center">Sign Up</h1>
<form class="form-horizontal" action="/user/create" method="post">
  <div class="form-group">
    <div class="text-center">
      <input type="text" class="form-control " name="username" placeholder="Username">
    </div>
  </div>
  <div class="form-group">
    <div class="text-center">
      <input type="password" class="form-control " name="password" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <div class="text-center">
      <input type="password" class="form-control " name="passwordcheck" placeholder="Verify Password">
    </div>
  </div>
  <div class="form-group">
    <div class="text-center">
      <button type="submit" class="btn btn-block btn-primary ">Sign Up</button>
    </div>
  </div>
</form>
<form class="form-horizontal" action="/user/login" method="get">
  <div class="form-group">
    <div class="text-center">
      <button type="submit" class="btn btn-block btn-danger ">Log In</button>
    </div>
  </div>
</form>